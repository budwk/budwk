    <modelVersion>4.0.0</modelVersion>
    <groupId>com.budwk.app.device</groupId>
    <artifactId>wk-device-handlers-demo-meter</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>
    <properties>
